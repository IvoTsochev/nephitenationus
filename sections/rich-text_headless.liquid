<div>
  <div class="p-10">


    {% for block in section.blocks %}

      {% case block.type %}
        {% when 'MainLogo' %}

          <div class="
              flex 
              {{ block.settings.logo_alignment }}
            ">
            <img src={{ block.settings.logo_image | image_url: width: 400 | image_url }}/>
          </div>



        {% when 'text' %}


          <div class="
              flex my-5  
              {{ block.settings.heading_alignments }}
            ">
            <h1 class="
              {{ block.settings.heading_font_size }}
              ">{{ block.settings.heading_text }}</h1>
          </div>

        {% when 'Subheading' %}
          <div class="
            flex 
            mb-10
            {{ block.settings.subheading_alignments }}
            ">
            <h2 class="
              {{ block.settings.subheading_font_size }}
              ">{{ block.settings.subheading_text }}</h2>
          </div>


        {% when 'textarea' %}
          <div class="
            flex
            mb-10
            {{ block.settings.description_alignments }}
            ">
            <p class="
              {{ block.settings.description_font_size }}
              ">{{ block.settings.description_text }}</p>
          </div>


        {% when 'button' %}
          <div class="
            flex
            {{ block.settings.button_alignments }}
            ">
            <a href="{{ block.settings.button_link }}" class="p-8 bg-red-300">
              {{ block.settings.button_text }}
            </a>
          </div>

        {% when 'SocialMedia' %}
          <p>this is the social mediaaaaa</p>

      {%- endcase -%}


    {% endfor %}


  </div>
</div>



